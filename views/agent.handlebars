{{> nav}}

<div class="header-img center-align">
	<img class="responsive-img circle z-depth-1" src="../app/uploads/{{agent.local.image}}">
		<h2>{{agent.local.firstName}}</h2>
			{{#if agent.local.nar}}
				<div class="nar">
					<ul style="display:inline-flex;margin:0 0 5px 0;">
						<li>
							<i class="material-icons" style="color: #4CAF50">check_circle</i>
						</li>
						<li>
							<h6>Member of the National Association of Realtors</h6>
						</li>
					</ul>
				</div>
			{{else}}
			{{/if}}
		<a class="btn waves-effect waves-light modal-trigger green" id="agentBtn" href="#contact">Contact<i class="material-icons right">contact_mail</i></a>
	</ul>
	<hr>
</div>
<div class="container">
	<div class="row">
		<div class="col s12 l9">
			<div class="row center-align agent-row">
				<div class="col s12 l4">
					<h5>License</h5>
					<hr>
					<p>{{agent.local.license}}</p>
				</div>
				<div class="col s12 l4">
					<h5>Licensing Year</h5>
					<hr>
					<p>{{agent.local.license_year}}</p>
				</div>
				<div class="col s12 l4">
					<h5>Orientation</h5>
					<hr>
					<p>{{agent.local.orientation}}</p>
				</div>
			</div>
			<div class="row">
				<div class="col l12">
					<h5 class="center-align">Bio</h5>
					<div class="card-panel blue-grey lighten-4">
						<span class="gray darken-4">
							{{agent.local.bio}}
						</span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col s12 l6">
					<h6 class="center-align">Distinctions</h6>
					<div class="card-panel blue-grey lighten-4">
						<span class="gray darken-4">
							{{agent.local.distinctions}}
						</span>
					</div>
				</div>
				<div class="col s12 l6">
					<h6 class="center-align">Specialties</h6>
					<div class="card-panel blue-grey lighten-4">
						<span class="gray darken-4">
							{{agent.local.distinctions}}
						</span>
					</div>
				</div>
			</div>
		</div>
		<div class="col s12 l3">
			<div class="service center-align">
    		<ul style="display:inline-flex;margin-top:0;margin-bottom:0">
    			<li style="margin-right: 10px">
    				<h5 class="col l12" style="margin-top:0;margin-bottom:0">Service Areas</h5>
  				</li>
				</ul>
    		<hr>
  		</div>
			{{#each agent.local.areas}}
				<div class="row agent-card">
					<div class="col l12">
						<div class="card grey darken-1 center-align agent">
							<div class="card-content white-text">
								<p>{{this.country}}</p>
								<p>{{this.city}}, {{this.state}}</p>
								<p>{{this.area}}</p>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>